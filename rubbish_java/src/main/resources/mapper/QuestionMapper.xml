<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.llb.mapper.QuestionMapper">
	<resultMap id="questionResultMap" type="com.llb.entity.Question">
	  
	</resultMap>
	<!-- 插入 -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="dbid">
		insert into question(
		     name,
		     a,
		     b,
		     c,
		     d,
		     answer
		     )
		values (
		     #{name},
		     #{a},
		     #{b},
		     #{c},
		     #{d},
		     #{answer}
		     )
	</insert>
	<!-- 修改-->
	<update id="update">
		update question set 
		    name = #{name},
		    a = #{a},
		    b = #{b},
		    c = #{c},
		    d = #{d},
		    answer = #{answer}
		    where dbid = #{dbid}
	</update>
	<select id="findByDbid" resultMap="questionResultMap">
		select * from question where dbid=#{dbid}
	</select>
	<select id="findByIndex" resultMap="questionResultMap">
		select * from question 
		limit #{index},1
	</select>
	<!-- 通用查询 -->
	<select id="find" resultMap="questionResultMap">
		select * from question 
		<where>
			<if test="name != null and name != ''">
				and name = #{name}
			</if>
		</where> 
		order by dbid desc
	</select>
	<!-- 查询 -->
	<select id="query" resultType="hashmap">
		select * from question 
		<where>
			<if test="name != null and name != ''">
				name like concat('%', #{name}, '%')
			</if>
		</where>
		order by dbid desc 
		<if test="pu != null">
			 limit #{pu.index},#{pu.pageSize}
	    </if>
	</select>
	<!-- 获取记录数 -->
	<select id="totalCount" resultType="long">
		select count(*) from question
		<where>
			<if test="name != null and name != ''">
				name like concat('%', #{name}, '%')
			</if>
		</where>		
	</select>
	<!-- 删除 -->
	<delete id="delete">
		delete from question 
		<where>
		    <if test="dbids != null and dbids != ''">
		        dbid in 
			    <foreach item="item" index="index" collection="dbids"
                  open="(" separator="," close=")">
                  #{item}
                </foreach>
		    </if>
		</where>
	</delete>
	<!-- 统计数量 -->
	<select id="count" resultType="long">
		select count(*) from question
		<where>
			<if test="name != null and name != ''">
				name like concat('%', #{name}, '%')
			</if>
		</where>		
	</select>
</mapper>